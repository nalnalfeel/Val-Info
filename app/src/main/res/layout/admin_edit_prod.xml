<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/et_productivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter productivity details"
            android:textColorHint="@color/mySecondColor"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit_productivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/mySecondColor"
                    android:text="Submit"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_close_productivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mySecondColor"
                    android:text="Close"
                    android:textColor="@color/black"
                    android:layout_margin="6dp"/>
            </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
